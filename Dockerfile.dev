FROM golang:1.22-alpine

WORKDIR /app

# Install dependencies
RUN apk add --no-cache git
RUN go install github.com/cosmtrek/air@latest

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Expose port
EXPOSE 8080

# Run with air for hot reloading
CMD ["air", "-c", ".air.toml"]